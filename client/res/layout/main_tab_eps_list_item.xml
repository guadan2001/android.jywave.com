<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/sel_ep_list_item">

    <ImageView
        android:id="@+id/imgEpCover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ep_cover" />

    <TextView
        android:id="@+id/txtEpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgEpCover"
        android:layout_alignLeft="@+id/txtEpTitle"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp" >

        <ImageView
            android:id="@+id/imgEpStar"
            android:layout_width="70dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitStart"
            android:src="@drawable/star1" />

        <TextView
            android:id="@+id/txtEpLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/downloading"
            android:textColor="@color/gray_text"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtEpStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgEpCover"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/downloading"
        android:textColor="@color/green_download"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imgEpNewMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/corner_mark_new_ep" />

</RelativeLayout>